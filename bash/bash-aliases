# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

export DEV="~/Documents/dev"

alias ~="cd ~"
alias ..="cd .."
alias -- -="cd -"
alias desk="cd ~/Desktop"
alias dev="cd $DEV"
alias ls="ls ${colorflag}"
alias ll="ls -alhp"
alias md="mkdir"

alias x="exit"